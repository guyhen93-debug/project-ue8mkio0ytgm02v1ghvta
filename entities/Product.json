{
  "name": "Product",
  "description": "A product in the quarry system",
  "properties": {
    "product_id": {
      "type": "string",
      "description": "Unique product identifier"
    },
    "name_he": {
      "type": "string",
      "description": "Product name in Hebrew"
    },
    "name_en": {
      "type": "string",
      "description": "Product name in English"
    },
    "size": {
      "type": "string",
      "description": "Product size/dimensions"
    },
    "supplier": {
      "type": "string",
      "description": "The supplier that provides this product",
      "enum": ["shifuli_har", "maavar_rabin"]
    },
    "image_url": {
      "type": "string",
      "description": "URL of the product image"
    },
    "is_active": {
      "type": "boolean",
      "description": "Whether the product is active",
      "default": true
    }
  }
}
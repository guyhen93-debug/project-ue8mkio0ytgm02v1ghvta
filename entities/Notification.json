{
  "name": "Notification",
  "description": "In-app notifications for order status updates",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "ID of the user who should receive the notification"
    },
    "order_id": {
      "type": "string",
      "description": "ID of the related order"
    },
    "title": {
      "type": "string",
      "description": "Notification title"
    },
    "message": {
      "type": "string",
      "description": "Notification message"
    },
    "type": {
      "type": "string",
      "description": "Type of notification",
      "enum": ["order_approved", "order_rejected", "order_completed"]
    },
    "read": {
      "type": "boolean",
      "description": "Whether the notification has been read"
    }
  }
}
{
  "name": "Order",
  "description": "Delivery order for quarry materials",
  "properties": {
    "order_number": {
      "type": "integer",
      "description": "Sequential order number generated server-side"
    },
    "client_id": {
      "type": "string",
      "description": "ID of the client who created the order"
    },
    "client_name": {
      "type": "string",
      "description": "Name of the client"
    },
    "client_company": {
      "type": "string",
      "description": "Company name of the client"
    },
    "site_id": {
      "type": "string",
      "description": "ID of the delivery site"
    },
    "unlinked_site": {
      "type": "boolean",
      "description": "True for legacy orders without site linkage"
    },
    "product": {
      "type": "string",
      "description": "Selected quarry material",
      "enum": ["p_new_sand_0_4", "sesame_4_9_5", "lentil_9_5_19", "polia_19_25", "granite_10_60"]
    },
    "quantity": {
      "type": "number",
      "description": "Quantity in tons"
    },
    "delivery_date": {
      "type": "string",
      "description": "Requested delivery date and time"
    },
    "delivery_type": {
      "type": "string",
      "description": "Type of delivery",
      "enum": ["self_transport", "external"]
    },
    "status": {
      "type": "string",
      "description": "Order status",
      "enum": ["pending", "approved", "rejected", "completed"]
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments"
    },
    "notes_preview": {
      "type": "string",
      "description": "First line of notes for preview display"
    },
    "quarry_or_crossing": {
      "type": "string",
      "description": "Selected quarry or crossing",
      "enum": ["default", "shifolei_har", "yitzhak_rabin"]
    }
  }
}
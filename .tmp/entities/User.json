{
  "name": "User",
  "description": "User entity for clients and managers in the quarry system",
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name of the user"
    },
    "phone": {
      "type": "string",
      "description": "Phone number of the user"
    },
    "company": {
      "type": "string",
      "description": "Company name for clients"
    },
    "role": {
      "type": "string",
      "description": "User role: client or manager",
      "enum": ["client", "manager"]
    },
    "language": {
      "type": "string",
      "description": "Preferred language: en or he",
      "enum": ["en", "he"]
    },
    "reminders_enabled": {
      "type": "boolean",
      "description": "Whether reminder notifications are enabled for this user",
      "default": true
    },
    "reminders_delay_hours": {
      "type": "number",
      "description": "Reminder delay in hours (e.g., 24 or 48)",
      "enum": [24, 48],
      "default": 24
    }
  }
}